.header
  .header__name
    = link_to "Restaurant　reviews", root_path, class: 'header__title' 
  .search
    = form_with(url: search_posts_path, local: true, method: :get) do |form|
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "text-field"
      = button_tag type: 'submit', class: "submit" do
        = icon('fas', 'search')
        
  .header__posts
    .right
      - if user_signed_in?
        .mypage
          = link_to current_user.nickname, user_path(current_user), class: "mypage__name"
        .post
          = link_to "新規投稿", new_post_path, class: "post__new"
        .log
          = link_to "ログアウト", destroy_user_session_path, method: :delete,class: "log__out"
      - else
        .header__posts__right
          = link_to "ログイン", new_user_session_path, class: 'right__log'
          = link_to "新規登録", new_user_registration_path, class: 'right__post'
.container
  .container__left
    =  link_to @post.image.url, 'data-lightbox': @post.image do 
      = image_tag @post.image.url, class: "image-show"
    .more
    - if user_signed_in? && current_user.id == @post.user_id
      %span= image_tag 'arrow_top.png'
      %ul.more_list
        %li
          = link_to '編集', edit_post_path(@post.id), method: :get
        %li
          = link_to '削除', post_path(@post.id), method: :delete
    .name
      %span.name
        %a{href: "/users/#{@post.user.id}"}
          %span 投稿者
          = @post.user.nickname
    .title
      %span Title：
      = @post.title
    .genre
      %span Genre:
      = @post.genre
    .place
      %span Place:
      = @post.place
    .word
      %span A word:
      = @post.word
    .time
      .time__text
      = @post.created_at.to_s(:datetime_jp)
  .container__right
    .review-show
      = safe_join(@post.review.split("\n"),tag(:br))

