.header
  .header__name
  .header__posts
    .header__log
      ログイン
    .header__btn
      新規投稿
.contents.row
  .content_post
    = image_tag @post.image.url
    .more
      %span= image_tag 'arrow_top.png'
      %ul.more_list
        %li
          = link_to '編集', edit_post_path(@post.id), method: :get
        %li
          = link_to '削除', post_path(@post.id), method: :delete
    .title
      = @post.title
    .where
      = @post.where
    .word
      = @post.word
    .review
      = safe_join(@post.review.split("\n"),tag(:br))

