.header
  .header__name
    = link_to "Restaurant　reviews", root_path, class: 'header__title' 
  .search
    = form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form|
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
      = form.submit "検索", class: "search-btn"

.contents
  .content
    - @posts.each do |post|
      .content__box
        .name
          %a{:href => "/users/#{post.user.id}"}
            %span 投稿者
            = post.user.nickname
        .title
          %span Title：
          = post.title
        .where
          %span Place:
          = post.where
        .word
          %span A word:
          = post.word
        .time
          = post.created_at.to_s(:datetime_jp)
        %ul.more
          %li= link_to '詳細', "/posts/#{post.id}", method: :get
          - if user_signed_in? && current_user.id == post.user_id
            %li= link_to icon('fas', 'times-circle', class: 'icon'), "/posts/#{post.id}", method: :delete
            %li= link_to icon('fas', 'edit', class: 'edit'), "/posts/#{post.id}/edit", method: :get 
        .image
          - if post.image.present?  
            = image_tag post.image.url, class: 'image-post'
.footer
  .footer__text
