.container
  = form_with(model: @post, local: true) do |form|
    .container__left
      .title
        = form.text_field :title, class: "title__text", placeholder: "title" , rows: "10"
      .genre
        = form.text_field :genre, class: "genre__text", placeholder: "genre"
      .place
        = form.text_field :place, class: "place__text", placeholder: "place"
      .word
        = f.text_field :word, class: "word__text", placeholder: "word"
      .submit
        = form.submit "SEND", class: "submit__btn"
    .container__right
      .review
        = f.text_area :review, class: "review__text", placeholder: "review" , rows: "10"
      
