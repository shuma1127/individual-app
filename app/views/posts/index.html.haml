.contents
  .search
    %form
      %input.text-field{type: "text"}/
      %button.submit{type: "submit"} 検索
  .content
    - @posts.each do |post|
      .title
        = post.title
        .word
          = post.word
        - if post.image.present?
          .content__box  
            = image_tag post.image.url, class: 'content__box__image'
            .more
              %span= image_tag 'arrow_top.png'
              %ul.more__list
                %li= link_to icon('fas', 'edit', class: 'edit'), "/posts/#{post.id}/edit", method: :get 
                %li= link_to icon('fas', 'times-circle', class: 'icon'), "/posts/#{post.id}", method: :delete
                %li= link_to '詳細', "/posts/#{post.id}", method: :get

